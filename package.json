{
  "name": "design-system-boilerplate",
  "version": "1.0.0",
  "description": "A seed project to kick off a Design System project on top of Stencil, Figma Tokens and Storybook.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/design-system/design-system.esm.js",
  "dependencies": {
    "@emotion/css": "^11.10.5",
    "@stencil/core": "^2.13.0",
    "style-dictionary": "^3.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@chromatic-com/storybook": "^1.6.1",
    "@stencil/store": "^2.0.1",
    "@storybook/addon-a11y": "^8.2.6",
    "@storybook/addon-actions": "^8.2.6",
    "@storybook/addon-essentials": "^8.2.6",
    "@storybook/addon-interactions": "^8.2.6",
    "@storybook/addon-links": "^8.2.6",
    "@storybook/addon-viewport": "^8.2.6",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.3",
    "@storybook/preview": "^8.2.6",
    "@storybook/preview-api": "^8.2.6",
    "@storybook/manager": "^8.2.6",
    "@storybook/manager-api": "^8.2.6",
    "@storybook/html": "^8.2.6",
    "@storybook/html-webpack5": "^8.2.6",
    "@storybook/test": "^8.2.6",
    "@storybook/theming": "^8.2.6",
    "@types/jest": "^27.0.3",
    "babel-loader": "^8.3.0",
    "concurrently": "^7.6.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.4.5",
    "jest-cli": "^27.4.5",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^10.0.0",
    "storybook": "^8.2.6"
  },
  "scripts": {
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "start:storybook": "storybook dev",
    "dev": "stencil build --docs",
    "postdev": "concurrently \"stencil build --watch\" \"storybook dev\"",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "transform-tokens": "node ./src/design-tokens/config/transform-tokens.js",
    "build-storybook": "storybook build",
    "generate:icons": "node ./src/shared/utils/generate-icons.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deeleman/design-system-boilerplate.git"
  },
  "author": "Pablo Deeleman",
  "license": "MIT"
}
